# Include in $HOME/.gitconfig
#
# [include]
#   path = ~/.config/delta/delta.gitconfig

[core]
  pager = delta

[interactive]
  diffFilter = delta --color-only

[delta]
  navigate = true  # use n and N to move between diff sections

[include]
  path = tokyonight_night.gitconfig

[merge]
  conflictstyle = zdiff3
